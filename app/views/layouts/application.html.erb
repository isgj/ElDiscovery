<!DOCTYPE html>

<html>
<head>
  <title>Progetto1</title>
  <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "El Discovery", root_path, class: "navbar-brand" %>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li> <%= link_to "Home", percorsos_path %> </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <% if current_user  %>
              <%= link_to "Crea nuovo percorso", new_percorso_path %>
               <li><%= image_tag current_user.image_url, alt: current_user.name, class: 'img-circle' %></li>
               <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
              <% else  %>
             <li><%= link_to "Sign in with Google", '/auth/google/', class: "btn btn-default btn-xs", role: "button" %></li>


              <% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </nav>
<%= yield %>

</body>
</html>

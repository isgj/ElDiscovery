<p id="notice"><%= notice %></p>
<form class="form-inline text-center" action="/percorsos" method="GET" name="ricerca">
  <div class="form-group">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input  type="text" class="form-control" placeholder="Partenza" name="partenza">
    <input  type="text" class="form-control" placeholder="Destinazione" name="destinazione">
    <input  type="date" class="form-control" name="data">
    <input class="btn btn-primary" type="submit" value="Cerca">
  </div>
</form>
<% if @percorsos.empty? %>
  <div class="well">
    <p class="lead text-center">
      Non ci sono persorsi da mostrare!
    </p>
  </div>
<% else %>
  <% @percorsos.each do |percorso| %>
    <div class="well">
      <span class="navbar-right">Qui ci va l'utente</span>
      <span>
        <strong><%= percorso.partenza%> - <%= percorso.destinazione%></strong><br>
        <strong>Partenza: </strong> <%= percorso.data %> <%= percorso.ora %><br>
        <strong>Durata: </strong> <%= percorso.durata %>
      </span>
      <div>
        <p class="text-center">
          <%= link_to "Mostra di piÃ¹.", percorso_path(percorso) %>
        </p>
      </div>
    </div>
    <% end %>
<% end %>

